@using PagedList.Mvc
@model PagedList.IPagedList<Shoping.Models.category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>


    

    body {
        background-color: skyblue;
    }

    .cimg {
        -webkit-transform 5s;
        transition: transform 5s;
    }
    .cimg:hover
    {
            -webkit-transform: rotatez(360deg);
    }
</style>

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <title> View Categories </title>
    <meta name="viewport" content="width=device-width" />
    @*<link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />*@
</head>
<body>

    <div class="container" style="height:1150px;">
        <div class="row" style="margin-top:53px" ;>
            <div class="col-lg-12" style="height:200px; border:1px solid solid;">
                <img src="~/Content/images/asd.gif" style="width:100%;height:100%" />
            </div>
        </div>


        <div class="row" style="margin-bottom:40px">
            <div class="col-lg-2 col-md-2">
                <img src="~/Content/images/original.gif" class="img img-responsive" style="width:100%; height:1000px" />
            </div>

            <div class="col-lg-8 col-md-8">
                <div class="row">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">
                                <img src="@Url.Content(item.cat_image)" style="height:100%;width:100%;border-radius:50px 50px 50px 50px" />
                                <h4 style="color:red;font-family:'Arial Rounded MT';text-align:center">@Html.ActionLink(@item.cat_name, "Ads", new { id = @item.cat_id })</h4>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="col-lg-2 col-md-2">
                <img src="~/Content/images/original.gif" class="img img-responsive" style="width:100%; height:1000px" />
            </div>
            
        </div>

        
    </div>
    

    <div id="container" style="margin-left:20px">
        <p></p>
        <p></p>
        <div class="pagination" style="margin-left:400px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount  @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</body>
</html>


@model Shoping.Models.userr
@{
    ViewBag.Title = "login";
    
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
       <link rel="stylesheet" href="~/Content/LoginCSS.css">
    <title> Login </title>
    <style media="screen">
        body{
        background-color: skyblue;
    }
    </style>
</head>
<body>
    <div class="loginbox">
        <img class="avatar" src="~/Content/images/car_icon.jpg" alt="">
        @*<h1>Add new Category</h1>*@
        @*<form class="login_form" action="login" method="post">*@
        @using (Html.BeginForm("login","User",FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.LabelFor(u => u.userr_name)
            @Html.EditorFor(u => u.userr_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Username" } })
            @Html.ValidationMessageFor(u => u.userr_name, null, new { @class = "text-danger" })

            @Html.LabelFor(u => u.userr_password)
            @Html.EditorFor(u => u.userr_password, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Password" } })
            @Html.ValidationMessageFor(u => u.userr_password, null, new { @class = "text-danger" })

            if (ViewBag.error != null)
            {
                <div style="color:red">@ViewBag.error</div>
            }

            <input type="submit" name="submit" value="Login"> <br>
            <a href="#">forget your password ?</a> <br>
            <a href="SignUp">Don't have an account</a> <br>
        }
    </div>
    <div class="copyrightt">
        copyright &copy 2020 'MK'
    </div>
</body>
</html>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}